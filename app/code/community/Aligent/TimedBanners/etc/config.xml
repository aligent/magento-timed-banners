<?xml version="1.0"?>
<config>
    <modules>
        <Aligent_TimedBanners>
            <version>0.0.1</version>
        </Aligent_TimedBanners>
    </modules>
    <global>
        <blocks>
            <aligent_timedbanners>
                <class>Aligent_TimedBanners_Block</class>
            </aligent_timedbanners>
        </blocks>
        <helpers>
            <aligent_timedbanners>
                <class>Aligent_TimedBanners_Helper</class>
            </aligent_timedbanners>
        </helpers>
        <resources>
            <aligent_timedbanners_setup>
                <setup>
                    <module>Aligent_TimedBanners</module>
                </setup>
            </aligent_timedbanners_setup>
        </resources>
        <default>
            <aligent_timedbanners>
                <enabled>0</enabled>
                <banner_start_date>20/12/2000</banner_start_date>
                <banner_end_date>12/1/2001</banner_end_date>
                <message>We are on holidays between the 20th of December and the 12th of January</message>
            </aligent_timedbanners>
        </default>
    </global>
    <frontend>
        <layout>
            <updates>
                <aligent_timedbanners module="Aligent_TimedBanners">
                    <file>aligent_timedbanners.xml</file>
                </aligent_timedbanners>
            </updates>
        </layout>
    </frontend>
</config>